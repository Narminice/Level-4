12. Mükəmməl ədədləri tapın (bölənlərinin cəmi özünə bərabər olanlar).
#include <iostream>
using namespace std;

int main() {
    cout << "Mükəmməl ədədlər (1–1000): ";
    for (int n = 1; n <= 1000; n++) {
        int cem = 0;
        for (int i = 1; i < n; i++)
            if (n % i == 0)
                cem += i;
        if (cem == n)
            cout << n << " ";
    }
    return 0;
}
