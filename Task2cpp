2. Verilmiş ədədin rəqəmlərinin sayını hesablayın.
#include <iostream>
using namespace std;

int main() {
    int n, say = 0;
    cout << "Ədəd daxil edin: ";
    cin >> n;

    if (n == 0) say = 1;
    while (n != 0) {
        say++;
        n /= 10;
    }

    cout << "Rəqəmlərin sayı: " << say;
    return 0;
}
