4. Rəqəmlərinin cəmi 3-ə bərabər olan 3 rəqəmli ədədləri tapın.
#include <iostream>
using namespace std;

int main() {
    cout << "Rəqəmləri cəmi 3 olan ədədlər: ";
    for (int i = 100; i <= 999; i++) {
        int a = i / 100, b = (i / 10) % 10, c = i % 10;
        if (a + b + c == 3)
            cout << i << " ";
    }
    return 0;
}
